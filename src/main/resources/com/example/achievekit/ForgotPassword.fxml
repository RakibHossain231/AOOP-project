<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.achievekit.ForgotPasswordController"
      alignment="CENTER" prefWidth="420" prefHeight="560"
      stylesheets="@ForgotPassword.css">

    <VBox fx:id="forgotPassCard" spacing="14" alignment="CENTER" maxWidth="360">

        <!-- Logo / Title -->
        <Label text="AK" fx:id="resetLogo"/>
        <Label text="AchieveKIT" fx:id="resetTitle"/>
        <Label text="Reset Password" fx:id="resetSubtitle"/>

        <!-- Step 1: Identify account -->
        <TextField fx:id="loginField" promptText="Username or Email"/>

        <HBox id="actionRow" spacing="10" alignment="CENTER">
            <Button text="Show Question" onAction="#onLoadQuestion" styleClass="ButtonsCSS"/>
            <Button text="Back"          onAction="#backToLogin"    styleClass="ButtonsCSS"/>
        </HBox>

        <!-- Step 2: Question + Answer (grouped, prettier) -->
        <VBox fx:id="questionGroup" spacing="6" alignment="CENTER_LEFT" maxWidth="340">
            <Label fx:id="questionCaption" text="Your security question"/>
            <Label fx:id="questionText"    wrapText="true" maxWidth="340"/>
        </VBox>

        <PasswordField fx:id="answerField" promptText="Answer"/>
        <Button fx:id="verifyBtn" text="Verify Answer" onAction="#onVerifyAnswer" styleClass="ButtonsCSS"/>

        <!-- Step 3: New password -->
        <PasswordField fx:id="newPassField"     promptText="New Password (min 8)"/>
        <PasswordField fx:id="confirmPassField" promptText="Confirm Password"/>
        <Button fx:id="resetBtn" text="Reset Password" onAction="#resetPassword" styleClass="ButtonsCSS"/>

    </VBox>

    <padding><Insets topRightBottomLeft="16"/></padding>
</VBox>
